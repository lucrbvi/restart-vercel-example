{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "api/index.tsx": {
      "runtime": "@godsreveal/vercel-bun@0.2.4",
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.tsx" }
  ],
  "outputDirectory": "dist",
  "buildCommand": "bun run build",
  "installCommand": "bun install"
}